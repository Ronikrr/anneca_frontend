<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
            line-height: 1.6;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            border: 1px solid #ddd;
            padding: 20px;
        }

        .header,
        .footer {
            text-align: center;
            margin-bottom: 20px;
        }

        .section {
            margin-bottom: 20px;
        }

        .section h2 {
            font-size: 18px;
            margin-bottom: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }

        .details,
        .items {
            display: flex;
            justify-content: space-between;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
            margin-bottom: 10px;
            flex-wrap: wrap;
        }

        .details>div,
        .items>div {
            flex: 1 1 100%;
            margin-bottom: 10px;
        }

        .items .item {
            flex: 1;
        }

        .total {
            font-size: 18px;
            font-weight: bold;
            text-align: right;
        }

        .item2 {
            text-align: center;
        }

        .item3 {
            text-align: end;
        }

        @media(min-width: 600px) {

            .details>div,
            .items>div {
                flex: 1;
                margin-bottom: 0;
            }

            .item3 {
                text-align: right;
            }
        }

        @media (max-width:575px) {
            .item p {
                font-size: 12px;
            }

            .total p {
                font-size: 14px;
            }

            .footer p,
            .section h2,
            .section p {
                font-size: 12px;
            }
        }
    </style>
    <title>Invoice</title>
</head>

<body>

    <div class="container">
        <div class="header">
            <h1>Invoice</h1>
        </div>

        <div class="section">
            <div class="details">
                <div>
                    <h2>Bill To</h2>
                    <p><%= billTo.name %><br />
                        <%= billTo.address %><br />
                        Phone: <%= billTo.phone %></p>
                </div>
                <div>
                    <h2>Ship To</h2>
                    <p><%= shipTo.name %><br />
                        <%= shipTo.address %><br />
                        Phone: <%= shipTo.phone %></p>
                </div>
            </div>
        </div>

        <div class="section">
            <h2>Order Details</h2>
            <p>Order ID: <%= order.id %><br />
                Order Date: <%= order.orderDate %><br />
                Invoice Date: <%= order.invoiceDate %><br />
                Invoice Number: <%= order.invoiceNumber %><br />
                GSTIN: <%= order.gstin %><br />
                Drug License Number: <%= order.drugLicenseNumber || '-' %><br />
            </p>
        </div>

        <div class="section">
            <h2>Items</h2>
            <% items.forEach(function(item) { %>
            <div class="items">
                <div class="item">
                    <p><%= item.name %></p>
                </div>
                <div class="item item2">
                    <p>Qty: <%= item.quantity %></p>
                </div>
                <div class="item item3">
                    <p>₹<%= item.price.toFixed(2) %></p>
                </div>
            </div>
            <% }) %>
        </div>

        <div class="section total">
            <p>Grand Total: ₹<%= grandTotal.toFixed(2) %></p>
        </div>

        <div class="footer">
            <p>This is a computer-generated invoice. No signature required.</p>
            <p>Contact Flipkart: 1800 208 9898 || www.flipkart.com/helpcentre</p>
        </div>
    </div>

</body>

</html>
